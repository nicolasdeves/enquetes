generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Enquete {
  id           String   @id @default(uuid())
  titulo       String
  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @default(now())

  opcao Opcao[]
}

model Opcao {
  id        String @id @default(uuid())
  descricao String
  enqueteId String

  enquete Enquete @relation(fields: [enqueteId], references: [id])
}
